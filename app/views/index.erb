<!DOCTYPE html>
<html lang=en>
  <head>
    <title>Events</title>
    <link href="/formatting.css" rel="stylesheet">
  </head>

  <body>
    <header>
      <h1>Events</h1>
    </header>

    <div class="content">
      <% @events.each do |event| %>
        <div class="event-summary">
         <a href="events/<%= event.id %>">
          <div class="title">
           <%= event.title %>
          </div>
          <div class="location">
            <%= event.location %>
          </div>
        </div>
      <% end %>
    </section>
  </body>
</html>
