<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= @event %></title>
    <link href="/formatting.css" rel="stylesheet">
  </head>

  <body>
    <header>
      <h1><%= @event.title %></h1>
    </header>

    <div class="content">
      <div class="title">
        <%= @event.title %>
      </div>
      <div class="location">
        <%= @event.location %>
      </div>
      <div class="host">
        Hosted by <%= @event.host %>
      </div>
      <div class="description">
        <%= @event.description %>
      </div>
    </div>
  </body>

</html>
